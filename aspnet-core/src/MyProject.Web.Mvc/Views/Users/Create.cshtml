@using Abp.Authorization.Users
@using MyProject.Web.Startup
@model MyProject.Web.Models.Users.UserListViewModel
@{
    ViewData["Title"] = "Create";
    ViewBag.CurrentPageName = PageNames.Users; // The menu item will be active for this page.
}
@section styles {
    <link href="~/lib/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet" asp-append-version="true" />
}

@section scripts {
    <script src="~/view-resources/Views/Users/Create.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-inputmask/jquery.inputmask.bundle.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-material-datetimepicker/js/bootstrap-material-datetimepicker.js" asp-append-version="true"></script>
}

<div class="row clearfix">
    <ol class="breadcrumb breadcrumb-col-pink">
        <li><a href="/Users"><i class="material-icons">list</i> List</a></li>
        <li class="active"><i class="material-icons">person_add</i> Create</li>
    </ol>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Create New User
                </h2>
            </div>
            <div class="body">
                <div class="row clearfix">
                    <div class="col-sm-6">
                        <b>First name</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">person</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control email" placeholder="Ex: Lionel">
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <b>Last name</b>
                        <div class="input-group">
                            <div class="form-line">
                                <input type="text" class="form-control email" placeholder="Ex: Messi">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row masked-input">
                    <div class="col-sm-12">
                        <b>Email</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">email</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control email" placeholder="Ex: example@example.com">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row masked-input">
                    <div class="col-sm-12">
                        <b>Phone</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">phone</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control mobile-phone-number" placeholder="Ex: +00 (000) 000-00-00">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row masked-input">
                    <div class="col-sm-12">
                        <b>Price</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">attach_money</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control money-dollar" placeholder="Ex: 99,99 $">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row masked-input">
                    <div class="col-sm-12">
                        <b>Credit Card</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">credit_card</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control credit-card" placeholder="Ex: 0000 0000 0000 0000">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <b>From Date</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">date_range</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="datepicker form-control" placeholder="Please choose a date...">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <b>To Date</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">date_range</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="datepicker form-control" placeholder="Please choose a date...">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row masked-input">
                    <div class="col-sm-12">
                        <b>Start Time</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">access_time</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control time24" placeholder="Ex: 00:00">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row masked-input">
                    <div class="col-sm-12">
                        <b>End Time</b>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">access_time</i>
                            </span>
                            <div class="form-line">
                                <input type="text" class="form-control time24" placeholder="Ex: 23:59">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <b>Quantity</b>
                        <div class="input-group p-t-5">
                            <span class="input-group-addon">
                                <i class="material-icons">card_giftcard</i>
                            </span>
                            <div class="form-line">
                                <select class="form-control show-tick">
                                    <option value="">Please select</option>
                                    <option value="10">10</option>
                                    <option value="20">100</option>
                                    <option value="30">1000</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <b>Hobbies</b>
                        <div class="m-l-30 p-t-10">
                            <input type="checkbox" id="basic_checkbox_1" class="filled-in" />
                            <label for="basic_checkbox_1">Music</label>
                            <br />
                            <input type="checkbox" id="basic_checkbox_2" class="filled-in" />
                            <label for="basic_checkbox_2">Book</label>
                            <br />
                            <input type="checkbox" id="basic_checkbox_3" class="filled-in" />
                            <label for="basic_checkbox_3">Game</label>
                            <br />
                            <input type="checkbox" id="basic_checkbox_3" class="filled-in" />
                            <label for="basic_checkbox_3">Sport</label>
                            <br />
                            <input type="checkbox" id="basic_checkbox_3" class="filled-in" />
                            <label for="basic_checkbox_3">Travel</label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <b>Description</b>
                        <div class="input-group p-t-5">
                            <span class="input-group-addon">
                                <i class="material-icons textarea-icon">event_note</i>
                            </span>
                            <div class="form-line">
                                <textarea rows="4" class="form-control no-resize" placeholder="Please type what you want..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <b>Status</b>
                        <div class="demo-switch m-l-30 p-t-10">
                            <div class="switch">
                                <label>OFF<input type="checkbox" checked><span class="lever"></span>ON</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="pull-right">
                            <button type="button" class="btn btn-primary waves-effect m-r-10">
                                <i class="material-icons">add</i>
                                <span>CREATE</span>
                            </button>
                            <button id="btnClear" type="button" class="btn btn-default waves-effect">
                                <i class="material-icons">clear</i>
                                <span>CLEAR</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>